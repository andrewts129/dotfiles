! hard contrast: *background: #1d2021
*background: #282828
! soft contrast: *background: #32302f
*foreground: #ebdbb2
! Black + DarkGrey
*color0:  #282828
*color8:  #928374
! DarkRed + Red
*color1:  #cc241d
*color9:  #fb4934
! DarkGreen + Green
*color2:  #98971a
*color10: #b8bb26
! DarkYellow + Yellow
*color3:  #d79921
*color11: #fabd2f
! DarkBlue + Blue
*color4:  #458588
*color12: #83a598
! DarkMagenta + Magenta
*color5:  #b16286
*color13: #d3869b
! DarkCyan + Cyan
*color6:  #689d6a
*color14: #8ec07c
! LightGrey + White
*color7:  #a89984
*color15: #ebdbb2

URxvt*scrollBar:         false
URxvt*scrollBar_right:   false

URxvt.cursorBlink: 1

URxvt*transparent:       false

URxvt.font: xft:Source Code Pro:pixelsize=16
URxvt.letterSpace: -1

URxvt.internalBorder: 12

*antialias:  true
*autohint:   false

URxvt.perl-ext-common: default,matcher,selection-to-clipboard,urxvt-colors
URxvt*perl-lib: /home/andrew/.dynamic-colors/urxvt-colors

Urxvt*keysym.Control-Tab: perl:urxvt-colors:

URxvt.url-launcher: /usr/bin/xdg-open
URxvt.matcher.button: 1

URxvt.keysym.Shift-Control-V: eval:paste_clipboard
URxvt.keysym.Shift-Control-C: eval:selection_to_clipboard

! Disables something mapped to ctrl-shift
URxvt*iso14755: False

URxvt.iconFile: /usr/share/icons/Paper/512x512/apps/utilities-terminal.png

xterm*dynamicColors: true
urxvt*dynamicColors: on
